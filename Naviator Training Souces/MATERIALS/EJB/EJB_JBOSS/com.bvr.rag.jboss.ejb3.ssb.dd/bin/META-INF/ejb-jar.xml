<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                            http://java.sun.com/xml/ns/javaee/ejb-jar_3_0.xsd"
        version="3.0">
   <description>JBoss Stateless Session Bean with DD</description>
   <display-name>JBoss Stateless Session Bean with DD</display-name>
   <enterprise-beans>
      <session>
         <ejb-name>Calculator</ejb-name>
         <remote>stateless_deployment_descriptor.bean.CalculatorRemote</remote>
         <local>stateless_deployment_descriptor.bean.CalculatorLocal</local>
         <ejb-class>stateless_deployment_descriptor.bean.CalculatorBean</ejb-class>
         <session-type>Stateless</session-type>
         <transaction-type>Container</transaction-type>
      </session>
   </enterprise-beans>
</ejb-jar>
